@model IEnumerable<LibraryManagementApp.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-4">
            <h2 class="text-primary">Books</h2>
        </div>
        <div class="col-4">
            <form class="d-flex">
                <input class="form-control me-sm-2" type="search" placeholder="Search" value="@ViewData["GetBooks"]" name="bookSearch">
                <button class="btn btn-secondary my-2 my-sm-0 ms-1" type="submit">Search</button>
                <a asp-action="Index" class="btn btn-secondary ms-1">Get All Books</a>
            </form>
        </div>
        <div class="col-4 text-end">
            <a asp-controller="Books" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add New Book
            </a>
        </div>
    </div>
    <br />

<table class="table table-boarded table-striped" style="width:100%">
    <thead class="text-bg-secondary">
        <tr>
            <th class="text-light" >
                @Html.DisplayNameFor(model => model.BookName)
            </th>
                <th class="text-light">
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th class ="text-light">
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="text-light">
@foreach (var item in Model) {
         <tr class="text-light">
            <td class="text-light">
                @Html.DisplayFor(modelItem => item.BookName)
            </td>
            <td class="text-light">
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td class="text-light">
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
             <td class="w-75 btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> &nbsp;Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary mx-2">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i> &nbsp;Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
